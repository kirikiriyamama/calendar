= simple_nested_form_for @schedule do |f|
  = f.input :summary, input_html: { class: "span5" }
  = f.input :description, input_html: { class: "span5", rows: "5" }
  = f.input :deadline_at, use_month_numbers: true, minute_step: 10, input_html: { class: "input-small" }
  = f.input :notes, input_html: { class: "span5", rows: "5" }

  = f.fields_for :tasks do |task_form|
    = task_form.check_box :complete
    = task_form.text_field :content, input_html: { class: "span5" }
    = task_form.link_to_remove "Remove this task"
  = f.link_to_add "Add a task", :tasks
  %br

  = f.button :submit, class: "btn-primary"
  = link_to "delete", @schedule, method: :delete, class: "btn btn-danger"
