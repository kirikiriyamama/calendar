!!!
%html(lang="ja")
  %head
    %meta(charset="utf-8")
    %title Release Schedule
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .navbar
      .navbar-inner
        %a.brand(href="#{url_for :controller => 'calendar', :action => 'index', :only_path => false}") Release Schedule
    - if flash[:notice].present?
      .alert.alert-success
        %a.close{ href: "#", data: { dismiss: "alert" } } &times;
        = flash[:notice]
    = yield
